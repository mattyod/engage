#!/usr/bin/env node
'use strict';

var config = require('../config'),
    make = require('./make'),
    log = require('col');

// Commands
var add = require('./commands/add'),
    remove = require('./commands/remove');

module.exports = (function () {
    var cmd = process.argv[2],
        act = process.argv[3];

    // App commands
    if (act) {
        switch (cmd) {
        case 'add':
            add(act);
            break;
        case 'remove':
            remove(act);
        }
    }

    // Helper commands
    switch (cmd) {
    case '-v':
        break;
    }

    console.log(cmd, act);
    // console.log(process.argv);
    // var x = process.argv[5];
    // console.log(x);
    // var args = process.argv.slice(2),
    //     name;

    // name = args.length ? args[0] : false;

    // if (name) {
    //     make(name, config.get());
    // } else {
    //     log.error('Project name needed');
    // }

})();